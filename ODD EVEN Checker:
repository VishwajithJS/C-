#include <iostream>
using namespace std;
class OddEven{
    public:
    int num1;
    void check(){
    if(num1%2==0)
    cout<< num1<<"is even"<< endl;
    else
    cout<< num1<<"is odd"<< endl;
    }
};
int main(){
    OddEven num1;
    cout<<"Enter a number:";
    cin>>num1.num1;
    num1.check();
    return 0;
}
